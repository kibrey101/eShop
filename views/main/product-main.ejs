<div class="row">
    <% for(var product in products) { %>
        <div class="col s12 m6 l3">
            <div class="card" style="box-shadow: 0 1px 1px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);">
                <div class="card-image waves-effect waves-block waves-light activator">
                    <a href="/product/<%= products[product]._id %>">
                        <img src="/img/iphone.jpg" style="padding: 3px;">
                    </a>
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4"><i class="material-icons right">more_vert</i></span>
                    <h6 class="productCategory"><%= products[product].category.name %></h6>
                    <h6 class="productName"><%= products[product].name %></h6>
                </div>
                <div class="card-action" style="padding: 6px;">
                    <form action="/addToCart" method="post">
                        <div class="row" style="margin: 20px 0 0 0;">

                                <input type="hidden" name="product_id" id="product_id" value="<%= products[product]._id %>">
                                <input type="hidden" name="priceHidden" id="priceHidden" value="<%= products[product].price %>">
                                <% if(user){ %>
                                        <div class="col s2" style="padding: 0;">
                                            <input type="hidden" class="quantity" name="quantity" id="quantity" value="1">
                                            <input placeholder="Qty" type="text" class="validate s6 homeCartQuantity"
                                                   style="font-size: 12px;border: 1px solid #ccc; padding-left: 6px; height: 30px;border-radius: 1px;box-shadow: none;">
                                        </div>
                                        <div class="col s7">
                                            <button type="submit" class="btn red darken-2 homeAddToCart"
                                                    style="padding-left: 5px; padding-right: 5px;">ADD TO CART</button>
                                        </div>

                                <% } else { %>
                                    <a href="/login" class="btn btn-warning">Signin to make order</a>
                                <% } %>
                        </div>
                    </form>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Description<i class="material-icons right">close</i></span>
                    <p><%= products[product].description %></p>
                </div>
            </div>
        </div>
    <% } %>
</div>
<div class="container" style="margin: 0 0 60px 20px;">
    <div class="row">
        <ul class="pagination" text="center">
            <li>
                <% for(i=1; i<=pages; i++) { %>
                <% if(i===1 ) { %>
            <li><a href="/"><%= i %></a></li>
            <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %></a></li>
            <% } %>
            <% } %>
            </li>
        </ul>

    </div>
</div>