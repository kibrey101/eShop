<% layout("layout") -%>
<div class="row">
    <div class="row">
        <% if (removeMessage.length > 0) { %>
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>
            <%= removeMessage %>
        </div>
        <% } %>
    </div>
    <div class="row">
        <% if(foundCart.items.length == 0) { %>
        <h4 class="text-center" style="margin-top: 50px;text-decoration: none;">OOps! No items in cart: <a href="/" style="text-decoration: none;color:#00C853;">Go back to buy items</a></h4>
        <% } else { %>
        <div class="col s12">
            <table class="left bordered striped">
                <thead >
                <tr>
                    <th class="left">Product</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% for(var item in foundCart.items) { %>
                <tr>
                    <td>
                        <div class="col s2">
                            <img src="/img/iphone.jpg" alt=""style="width:80px;">
                        </div>
                        <div class="col s4">
                            <div class="row" style="margin: 0;">
                                <a class="list-group-item-heading" href="product/<%= foundCart.items[item].item._id %>" style="color: #4caf50;
                                font-size: 1.2em;"><%= foundCart.items[item].item.name %></a>
                            </div>
                            <div class="row" style="margin: 0;">
                                <%= foundCart.items[item].item.manufacturer %>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row">
                            <button type="button" class="btn btn-small minusBtn">-</button>
                            <input type="search" name="quantity" class="cartQuantity" value="<%= foundCart.items[item].quantity %>">
                            <button type="button"  class="btn btn-small plusBtn">+</button>
                        </div>
                    </td>
                    <td>
                        <form action="/remove" method="post">
                            <div class="row">
                                <input type="hidden" name="item" value="<%= foundCart.items[item]._id %>">
                                <button type="submit" class="btn deleteBtn"><i class="material-icons" style="color:red;font-size: 2em;">delete</i></button>
                            </div>
                        </form>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
           <!-- <ul class="collection">
                <% for(var item in foundCart.items) { %>
                <li class="collection-item avatar">
                    <img src="/img/iphone.jpg" alt="" class="circle">
                    <span class="title">Title</span>
                    <p>First Line <br>
                        Second Line
                    </p>
                    <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                </li>
                <% } %>
            </ul>-->
        </div>
        <% } %>
    </div>
</div>
