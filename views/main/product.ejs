<% layout("layout") %>
<div class="container">
    <div >
        <div>

            <div class="col s3" style="margin-top: 25px;">
                <img src="/img/iphone.jpg" class="responsive-img" width="100px;">
            </div>

            <div class="col s7 offset-s1">
                <div class="product-title"><h3 style="font-weight: bold;"><%= product.name %></h3></div>
                <div class="product-desc"><h5 style="font-weight: bold;color: #777;"><%= product.category.name %></h5></div>

                <hr>
                <form action="/addToCart" method="post" id="productForm">
                    <div class="row">
                        <input type="hidden" class="form-control" name="quantity" id="quantity" value="1">
                        <div class="col-xs-5 form-group">
                            <div  role="group" aria-label="..." >
                                <button type="button" id="minus" class="btn btn-default">-</button>
                                <input type="text" class="text-center" id="total" value="1"  style="width: 45px;height:33px;margin:0;">
                                <button type="button" id="plus" class="plus btn btn-default">+</button>
                            </div>
                        </div>
                        <input type="hidden" name="product_id" id="product_id" value="<%= product._id %>">
                        <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">
                        <div class="col-xs-5 form-group">
                            <% if(user){ %>
                            <button type="submit" id="addToCart" class="btn btn-primary text-left" style="width:107px;">Add to cart</button>
                            <% } else { %>
                            <a href="/login" class="btn btn-warning">Signin to make order</a>
                            <% } %>
                        </div>
                    </div>
                </form>
                <hr>
                <div class="panel panel-default" style="border: 1px solid #EBEFF0;">
                    <div class="panel-heading" style="background-color: #EBEFF0;">
                        <h3 class="panel-title" >Description</h3>


                    </div>
                    <div class="panel-body">
                        <%= product.description %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>