<% layout("layout") %>
<div class="container">
    <div class="row">
        <div class="col-sm-4 col-md-5">
             <img src="<%= product.image %>" class="img img-responsive">
        </div>

        <div class="col-sm-6 col-md-4 col-md-offset-2 col-sm-offset-2">
            <h3><%= product.name %></h3>
            <p><%= product.category.name %></p>
            <p><%= product.price %></p>

            <div class="panel panel-default fixed-bottom">
                <form action="/addToCart" method="post">
                    <div class="row">
                        <div class="col-md-6 col-sm-offset-3">
                            <input type="hidden" class="form-control" name="quantity" value="1">
                            <div class="btn-group" role="group" aria-label="..." >
                                <button type="button" id="minus" class="btn btn-default">-</button>
                                <button type="button" id="total" class="btn btn-default">1</button>
                                <button type="button" id="plus" class="plus btn btn-default">+</button>
                            </div>
                            <input type="hidden" name="product_id" id="product_id" value="<%= product._id %>">
                            <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">
                            <% if(user){ %>
                            <button type="submit" class="btn btn-primary btn-sm" style="margin-right: 1px;">Add to cart</button>
                            <% } else { %>
                            <a href="/login" class="btn btn-warning">Signin to make order</a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>