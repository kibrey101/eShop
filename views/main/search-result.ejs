<% layout("layout") -%>

<% if(results.length === 0 ){ %>
    <h3>Search not found</h3>
<% } else { %>
    <h3>Results for <%= query %></h3>
    <div class="container">
        <div class="row">
            <% for(var result in results) { %>
            <div class="thumbnail">
                <a href="/product/<%= results[result]._id %>" >
                        <img src="<%= results[result]._source.image %>" class="img-thumbnail" style="width: 100px;height: 100px;">
                        <div class="caption">
                            <h3><%= results[result]._source.name %></h3>
                            <p><%= results[result]._source.category.name %></p>
                            <p><%= results[result]._source.price %></p>
                        </div>
                </a>
            </div>
            <% } %>
        </div>
    </div>
<% } %>